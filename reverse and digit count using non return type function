#include<stdio.h>
void reversenumber(int num){
int rem=0;
int rev=0;
while(num!=0){
rem=num%10;
rev=rev*10+rem;
num=num/10;
}
printf("%d",rev);
}
void digitcount(int num){
int m=num;
int count=0;
while ( m!=0){
count =count +1;
m=m/10;
}
printf("%d\n",count);
reversenumber (num);
}
int main()
{

int p;
printf("enter the number");
scanf("%d",&p);
digitcount(p);

returnÂ 0;
}
